              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"operationType\": \"DEPOSIT\",\n  \"cashier\": \"LINDA\",\n  \"currency\": \"BGN\",\n  \"amount\": 400.00,\n  \"denominations\": {\n    \"10\": 20,\n    \"50\": 4\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/cash-operation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "cash-operation"]
